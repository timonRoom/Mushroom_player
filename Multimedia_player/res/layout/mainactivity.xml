<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#44eeffbb">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="horizontal"
         >
         <ImageView 
             android:paddingLeft="3dp"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:src="@drawable/player_title"
             />
         <TextView 
             android:layout_gravity="center_vertical"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:text="蘑菇影音"
             android:textColor="#000000"
             android:paddingLeft="10dp"
             android:textSize="18sp"/>
          <TextView
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:layout_marginRight="5dp"
             android:text="关于"
             android:gravity="center"
            />
         <ImageView
             android:id="@+id/img_search"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:src="@drawable/search_selector"
             android:clickable="true"
             android:layout_marginRight="10dp"
            />
         
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_mian"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/fg_bottom_item"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal" 
        android:background="#ffffff">

        <RadioButton
            android:id="@+id/rb_moive"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_image_sleector"
            android:paddingTop="3dp"
            android:text="本地视频"
             android:gravity="center_horizontal"
            android:textColor="@color/radiobutton_textcolor"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_music"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_image_sleector2"
            android:paddingTop="3dp"
            android:text="本地音乐"
             android:gravity="center_horizontal"
            android:textColor="@color/radiobutton_textcolor"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_netmovie"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_image_sleector3"
            android:paddingTop="3dp"
            android:text="网络视频"
            android:gravity="center_horizontal"
            android:textColor="@color/radiobutton_textcolor"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_message"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_image_sleector4"
            android:paddingTop="3dp"
            android:text="在线音乐"
             android:gravity="center_horizontal"
            android:textColor="@color/radiobutton_textcolor"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>